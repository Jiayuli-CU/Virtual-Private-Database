--ADMINISTRATION_CONFERENCE
GRANT EXECUTE ON sa_components TO cs5322 WITH GRANT OPTION;
GRANT EXECUTE ON sa_user_admin TO cs5322 WITH GRANT OPTION;
GRANT EXECUTE ON sa_user_admin TO cs5322 WITH GRANT OPTION;
GRANT EXECUTE ON sa_label_admin TO cs5322 WITH GRANT OPTION;
GRANT EXECUTE ON sa_policy_admin TO cs5322 WITH GRANT OPTION;
GRANT EXECUTE ON sa_audit_admin  TO cs5322 WITH GRANT OPTION;

GRANT LBAC_DBA TO cs5322;
GRANT EXECUTE ON sa_sysdba TO cs5322;
GRANT EXECUTE ON to_lbac_data_label TO cs5322;


GRANT SELECT ON CS5322.ADMINISTRATION_CONFERENCE TO ADMM;

--GRANT CONNECT, ADMM TO madm IDENTIFIED BY password;


BEGIN
  SA_SYSDBA.DROP_POLICY ( 
    policy_name  => 'ADC_POL',
    drop_column  => TRUE);
END;
/

BEGIN
 SA_SYSDBA.CREATE_POLICY (
  policy_name      => 'ADC_POL',
  column_name      => 'CONFERENCE_OLS_COL');
END;
/

EXEC SA_SYSDBA.ENABLE_POLICY ('ADC_POL');

BEGIN
   SA_COMPONENTS.CREATE_LEVEL (
      policy_name => 'ADC_POL',
      level_num   => 3000,
      short_name  => 'HS',
      long_name   => 'HIGHLY_SENSITIVE');

   SA_COMPONENTS.CREATE_LEVEL (
      policy_name => 'ADC_POL',
      level_num   => 2000,
      short_name  => 'S',
      long_name   => 'SENSITIVE');
END;
/




BEGIN
   SA_USER_ADMIN.SET_LEVELS (
      policy_name  => 'ADC_POL',
      user_name    => 'madm', 
      max_level    => 'HS',
      min_level    => 'S');
END;
/


BEGIN
  SA_COMPONENTS.CREATE_COMPARTMENT (
    policy_name      => 'ADC_POL',
    long_name        => 'CN',
    short_name       => 'CN',
    comp_num         =>  1000);

  SA_COMPONENTS.CREATE_COMPARTMENT (
    policy_name      => 'ADC_POL',
    long_name        => 'US',
    short_name       => 'US',
    comp_num         =>  2000);


  SA_COMPONENTS.CREATE_COMPARTMENT (
    policy_name      => 'ADC_POL',
    long_name        => 'SG',
    short_name       => 'SG',
    comp_num         =>  3000);
END;
/


BEGIN
   SA_LABEL_ADMIN.CREATE_LABEL (
      policy_name  => 'ADC_POL',
      label_tag    => 4300,
      label_value  => 'S:CN:',   -- SENSITIVE level for the CN compartment
      data_label   => TRUE);

   SA_LABEL_ADMIN.CREATE_LABEL (
      policy_name  => 'ADC_POL',
      label_tag    => 4400,
      label_value  => 'S:US:',   --SENSITIVE level for the US compartment
      data_label   => TRUE);

   SA_LABEL_ADMIN.CREATE_LABEL (
      policy_name  => 'ADC_POL',
      label_tag    => 5400,
      label_value  => 'S:SG:',   --SENSITIVE level for the SG compartment
      data_label   => TRUE);
END;



BEGIN
   SA_USER_ADMIN.SET_USER_LABELS (
      policy_name    => 'ADC_POL',
      user_name      => 'admm', 
      max_read_label => 'S:CN,US,SG:');
END;
/



BEGIN
  SA_POLICY_ADMIN.APPLY_TABLE_POLICY (
    policy_name    => 'ADC_POL',
    schema_name    => 'CS5322', 
    table_name     => 'ADMINISTRATION_CONFERENCE',
    table_options  => 'READ_CONTROL');
END;
/



BEGIN
   SA_POLICY_ADMIN.ENABLE_TABLE_POLICY (
      policy_name => 'ADC_POL',
      schema_name => 'CS5322',
      table_name  => 'ADMINISTRATION_CONFERENCE');
END;
/



BEGIN
   SA_USER_ADMIN.SET_USER_PRIVS (
      policy_name => 'ADC_POL',
      user_name   => 'CS5322',
      privileges  => 'FULL');
END;
/



UPDATE cs5322.ADMINISTRATION_CONFERENCE SET CONFERENCE_OLS_COL = CHAR_TO_LABEL('ADC_POL','S:CN') WHERE BASE = 'CN';

UPDATE cs5322.ADMINISTRATION_CONFERENCE SET CONFERENCE_OLS_COL = CHAR_TO_LABEL('ADC_POL','S:US') WHERE BASE = 'US';

UPDATE cs5322.ADMINISTRATION_CONFERENCE SET CONFERENCE_OLS_COL = CHAR_TO_LABEL('ADC_POL','S:SG') WHERE BASE = 'SG';
